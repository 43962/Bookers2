<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h2>User info</h2>
   <div class="form_group">
    <label for="user_name">Name</label>
     <%= form_with model: current_user do |f| %>
     <%= f.text_field :name %>
   </div>

   <div class="form_group">
    <label for="user_image">Image</label>
     <p><%= f.file_field :image, accept: "image/*" %></p>
   </div>

   <div class="form_group">
    <label for="user_introduction">Introduction</label>
     <p><%= f.text_area :introduction %></p>
   </div>
     <% end %>

     <%= link_to "Update User",  user_path, class: "btn btn-secondary" %>

   </div>
  </div>
</div>