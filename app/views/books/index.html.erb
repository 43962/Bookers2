<div class="container px-5 px-sm-0">
 <div class="row">

   <div class="col-md-3">
    <%= render 'users/userinfo', user: @user %>
    <%= render 'newbook', book: @book %>
   </div>

   <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table tale-hover table-inverse"></table>
     <thead>
      <tr>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
      <% @books.each do |book| %>
      <p><%= book.title %></p>
      <p><%= book.body %></p>
      <% end %>
      </tr>
     </thead>
    </table>
   </div>
 </div>
</div>

