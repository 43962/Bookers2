
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
   <%= render 'users/userinfo', user: @user %>
   <%= render 'newbook', book: @book %>
  </div>

  <div class="col-md-8 offset-md-1">
   <h2>Book detail</h2>
   <table class="table">
    <tbody>
     <tr>
       <td>
         <%= link_to user_path(@user.id) do %>
         <% if @user.image.attached? %>
          <%= image_tag @user.image, size: "100x100" %>
         <% else %>
          <%= image_tag 'no_image', size: "100x100" %>
         <% end %><br>
         <%= @user.name %>
         <% end %>

       </td>
       <td>
         <%= link_to book_path do %>
         <%= @book.title %>
         <% end %>
       </td>
       <td>
         <%= @book.body %>
       </td>
         <% if @user == current_user %>
       <td>
         <%= link_to "edit", edit_book_path(@book.id), class:"btn btn-sm btn-success edit_book_22189" %>
       </td>
       <td>
          <%= link_to "destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-sm btn-danger destroy_book_22189" %>
       </td>
       <% end %>
     </tr>
    </tbody>
   </table>
  </div>

 </div>
</div>

